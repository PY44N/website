---
import SEO from "../components/SEO.astro";
import Header from "../sections/Header.astro";
import About from "../sections/About.astro";
import Experience from "../sections/Experience.astro";
import Projects from "../sections/Projects.astro";
import Contact from "../sections/Contact.astro";
import Footer from "../sections/Footer.astro";

import "@fontsource/open-sans";
import "../styles/global.less";
---

<style lang="less">
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: "Open Sans", sans-serif;
    line-height: 1.6;
    background-color: #0a192f;
    color: #ccd6f6;
  }

  h1,
  h2,
  h3 {
    color: #e6f1ff;
    margin-bottom: 1rem;
  }

  p {
    color: #a8b2d1;
    margin-bottom: 1rem;
  }

  a {
    color: #88ddff;
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }

  main {
    max-width: 1000px;
    margin: 2rem auto;
    padding: 0 2rem;
  }

  section {
    padding: 3rem 0;
    margin-bottom: 2rem;
    border-top: 1px solid #233554;
  }

  section h2 {
    font-size: 1.8rem;
    position: relative;
    padding-bottom: 0.5rem;
  }

  .fixed-socials {
    position: fixed;
    top: 2rem;
    left: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    z-index: 10;

    a {
      color: #a8b2d1;
      transition: color 0.3s ease, transform 0.3s ease;

      &:hover {
        color: #88ddff;
        transform: translateY(-3px);
        text-decoration: none;

        svg {
          stroke: #88ddff;
        }
      }

      svg {
        width: 24px;
        height: 24px;
        stroke: #a8b2d1;
        stroke-width: 1.5;
        fill: none;
      }
    }
  }
</style>

<html lang="en">
  <head>
    <SEO
      title="Ryan Smith's Portfolio"
      description="Ryan Smith is developer who occasionally makes cool things"
      permalink="https://www.ryankennasmith.com/"
    />
  </head>
  <body>
    <div class="fixed-socials">
      <a
        href="https://github.com/PY44N"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
        class="enter-left stagger-delay-1"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          role="img"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-github"
        >
          <title>GitHub</title>
          <path
            d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
          ></path>
        </svg>
      </a>
      <a
        href="https://www.linkedin.com/in/ryankennasmith/"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="LinkedIn"
        class="enter-left stagger-delay-2"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          role="img"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-linkedin"
        >
          <title>LinkedIn</title>
          <path
            d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
          ></path>
          <rect x="2" y="9" width="4" height="12"></rect>
          <circle cx="4" cy="4" r="2"></circle>
        </svg>
      </a>
      <a
        href="mailto:ryan@kennasmith.com"
        rel="noopener noreferrer"
        aria-label="Email"
        class="enter-left stagger-delay-3"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          role="img"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-mail"
        >
          <title>Email</title>
          <rect x="2" y="4" width="20" height="16" rx="2" ry="2"></rect>
          <path d="M22 6l-10 7L2 6"></path>
        </svg>
      </a>
    </div>

    <Header />

    <main>
      <About />
      <Experience />
      <Projects />
      <Contact />
    </main>

    <Footer />
  </body>
</html>
