---
export interface Props {
  link: string;
}
const { link } = Astro.props;
---

<style>
  a {
    @apply font-light underline text-[#707070] hover:text-[#A9DEF9];
    -webkit-transition: color 250ms; /* For Safari 3.0 to 6.0 */
    transition: color 250ms; /* For modern browsers */
  }
</style>

<a href={link}><slot /></a>
