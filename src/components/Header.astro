  ul {
    display: flex;
    flex-direction: row;
    list-style-type: none;
    padding: 0%;
  }

  a {
    stroke: rgb(154, 145, 129);
    -webkit-transition: all 250ms; /* For Safari 3.0 to 6.0 */
    transition: all 250ms; /* For modern browsers */
    display: inline-block;
    padding: 0.5rem;
    text-decoration: none;
    color: inherit;

    &:hover {
      stroke: #64ffda;
      color: #64ffda;
    }
  }

  svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  // Screen Reader thingy
  span {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .pageLink {
    padding-right: 1%;
  }
</style>

