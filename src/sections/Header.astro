<style lang="less">
  header {
    padding: 4rem 2rem 2rem;
    text-align: left;
    max-width: 1000px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    color: #e6f1ff;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 1.8rem;
    color: #a8b2d1;
    margin-bottom: 1.5rem;
  }

  .header-divider {
    width: 100%;
    max-width: 1000px;
    height: 1px;
    background: linear-gradient(to right, #0a192f, rgba(136, 221, 255, 0.5), #0a192f);
    // background: rgba(136, 221, 255, 0.5);
    margin: 2rem auto;
    opacity: 0;
    transform: scaleX(1);
    transition: opacity 0.6s ease, transform 0.6s ease;
    overflow: hidden;
  }

  .header-divider.visible {
    opacity: 1;
    transform: scaleX(1);
  }

  nav {
    margin: 1rem 0 1rem;
    display: flex;
    flex-wrap: wrap;
    
    a {
      margin-right: 1.5rem;
      margin-bottom: 0.5rem;
      font-size: 1.1rem;
      color: #88ddff;
      text-decoration: none;
      position: relative;
      display: inline-block;
      padding: 0.25rem 0;
      transition: all 0.3s ease;

      &::after {
        content: "";
        position: absolute;
        width: 100%;
        height: 1px;
        bottom: 5px;
        left: 0;
        background-color: #88ddff;
        transform: scaleX(0);
        transform-origin: bottom right;
        transition: transform 0.3s ease;
      }

      &:hover {
        text-decoration: none;

        &::after {
          transform: scaleX(1);
          transform-origin: bottom left;
        }
      }
    }
  }

  .fixed-socials {
    position: fixed;
    top: 2rem;
    left: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    z-index: 10;

    a {
      color: #a8b2d1;
      transition: color 0.3s ease, transform 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;

      &:hover, &:active, &:focus {
        color: #88ddff;
        transform: translateY(-3px);
        text-decoration: none;

        svg {
          stroke: #88ddff;
        }
      }

      svg {
        width: 24px;
        height: 24px;
        stroke: #a8b2d1;
        stroke-width: 1.5;
        fill: none;
      }
    }

    @media (max-width: 768px) {
      position: static;
      flex-direction: row;
      justify-content: center;
      margin-top: 1.5rem;
      gap: 2rem;
    }
  }


</style>

